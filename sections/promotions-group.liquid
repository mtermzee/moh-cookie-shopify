<h2 style="text-align: {{ section.settings.title_alignment }};">{{ section.settings.title }}</h2>
{% for block in settings.blocks %}
  {% if block.type == "promotion" %}
    <h3>{{ block.settings.title }}</h3>
    {{ block.settings.image | image_url: width: 500 | image_tag }}
  {% endif %}
{% endfor %}

{% schema %}
  {
    "name": "Promotions Group",
    "tag": "section",
    "class": "my-warpper-class",
    "settings": [
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      }, {
        "type": "select",
        "label": "Title Alignment",
        "id": "title_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }
    ],
    "blocks": [
      {
        "type": "promotion",
        "name": "Promotion",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "label": "Title",
            "id": "title"
          }, {
            "type": "image_picker",
            "label": "Image",
            "id": "image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Promotions Group"
      }
    ]
  }
{% endschema %}