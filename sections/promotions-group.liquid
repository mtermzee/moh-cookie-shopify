<div>
  <h2 style="text-align: {{ section.settings.title_alignment }}; color: {{ section.settings.color }}; font-size: {{ section.settings.font_size }};">
    {{ section.settings.title }}
  </h2>

  <div style="display: flex; justify-content: center; gap: 20px;">
    {% for block in section.blocks %}
      {% if block.type == "promotion" %}
        <div style="display: flex; flex-direction: column; gap: 10px;">
          <h3>{{ block.settings.title }}</h3>
          {{ block.settings.image | image_url: width: 500 | image_tag }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% render 'my-snippet'
  , { word: 'hello'
  , second_word: 'word2' }
%}

{% schema %}
  {
    "name": "Promotions Group",
    "tag": "section",
    "class": "my-warpper-class",
    "settings": [
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      }, {
        "type": "select",
        "label": "Title Alignment",
        "id": "title_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }, {
        "type": "color",
        "label": "Color",
        "id": "color",
        "default": "#000000"
      }, {
        "type": "range",
        "label": "Font Size",
        "id": "font_size",
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "promotion",
        "name": "Promotion",
        "limit": 2,
        "settings": [
          {
            "type": "text",
            "label": "Title",
            "id": "title"
          }, {
            "type": "image_picker",
            "label": "Image",
            "id": "image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Promotions Group"
      }
    ]
  }
{% endschema %}